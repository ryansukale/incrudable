{
  "name": "incrudable",
  "version": "0.0.1",
  "description": "Crud helpers for rxjs and redux based applications",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf lib",
    "build:commonjs": "babel src --out-dir lib",
    "build": "npm run clean && npm run build:commonjs",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "lint": "xo",
    "test": "mocha --recursive --require babel-core/register tests/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryansukale/incrudable.git"
  },
  "author": "ryansukale@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ryansukale/incrudable/issues"
  },
  "homepage": "https://github.com/ryansukale/incrudable#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.1.1",
    "rimraf": "^2.6.2",
    "sinon": "^5.0.10",
    "webpack-cli": "^2.0.15",
    "xo": "^0.20.3"
  },
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "batarang": "^2.0.12",
    "redux-actions": "^2.3.0",
    "webpack": "^4.6.0",
    "whatwg-fetch": "^2.0.4"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "rules": {
      "prefer-promise-reject-errors": 0,
      "unicorn/filename-case": [
        "error",
        {
          "case": "camelCase"
        }
      ]
    },
    "overrides": [
      {
        "files": "test/**/*.js",
        "env": [
          "jest"
        ]
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "none"
  }
}
